extends ../layout
block content
    h1.
        #{instrument._id}
    form#formEditInstrument(name='updateInstrument', method='post', action='/instruments/#{instrument._id}/edit', enctype='application/x-www-form-urlencoded')
        p Make:
            input#inputMake(type='text', value='#{instrument.make}', name='make')
        p Model:
            input#inputModel(type='text', value='#{instrument.model}', name='model')
        p Year:
            input#inputYear(type='integer' value='#{instrument.year}', name='year')
        p Price:
            input#inputPrice(type='integer' value='#{instrument.price}', name='price')
        p
            input(type='hidden', value='PUT', name='_method')
        p
            button#btnSubmit(type='submit') Update